# Environment variables for production deployment
# Copy this file to .env.production and fill in your values

# ElectricSQL Configuration
VITE_ELECTRIC_SHAPE_URL=https://your-electric-sync-service.railway.app
VITE_ELECTRIC_SOURCE_ID=main
VITE_ELECTRIC_SECRET=your-secret-key-here

# PostgREST API Configuration  
VITE_POSTGREST_URL=https://your-postgrest-api.railway.app

# Error Tracking (Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (choose one)
# PostHog (privacy-friendly, self-hostable)
VITE_POSTHOG_KEY=your-posthog-key
VITE_POSTHOG_HOST=https://app.posthog.com

# OR Plausible (privacy-first, simple)
VITE_PLAUSIBLE_DOMAIN=your-domain.com

# Production Settings
NODE_ENV=production
